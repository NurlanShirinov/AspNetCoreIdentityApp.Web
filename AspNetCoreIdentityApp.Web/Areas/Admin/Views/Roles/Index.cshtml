@{
    ViewData["Title"] = "Index";
}
@model List<AdminModel.RoleViewModel>



<div class="row">
    <div class="col-md-6 offset-md-2">
        <h2>Roles</h2>
    </div>

    <div class="col-md-2">
        <a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="admin">Add Role</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Role Name</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



