@{
    ViewData["Title"] = "Index";
}

@model UserViewModel
<h1>User Information </h1>

<div class="row">
    <div class="col-md-4 offset-md-4 text-center">
        <user-picture-thumbnail class="rounded" style="width:200px" picture-url="@Model.PictureUrl"></user-picture-thumbnail>
    </div>
</div>

<div class=" row">
    <div class="col-md-6 offset-md-3">
        <table class="table">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>