
@{
    ViewData["Title"] = "PasswordChange";
}

@model PasswordChangeViewModel


@*ashagida olan scripts kodu Layout faylinda @await RenderSectionAsync("Scripts", required: false) kodundan gelir. Formda her hansisa olan uygnsuzlugu aninda gosderir*@
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2> Password Change</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        @*burda hazir validationlar identityResultdan gelir meselen user adi artiq var password en azi bir reqem olmalidir ve s. *@
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Member" asp-action="PasswordChange" method="post">
 
            <div class="row mb-3">
                <label for="PasswordOld" class="col-md-4 col-form-label" asp-for="PasswordOld"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordOld" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordNew" class="col-md-4 col-form-label" asp-for="PasswordNew"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordNew" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNew"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="PasswordNewConfirm" class="col-md-4 col-form-label" asp-for="PasswordNewConfirm"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordNewConfirm" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8  offset-md-4">
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </div>

        </form>
    </div>
</div>

